<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvDateRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7â€“14 Juli 2025"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinnerFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/filter_options"
        app:layout_constraintTop_toTopOf="@id/tvDateRange"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Reusable Chart Section -->
    <LinearLayout
        android:id="@+id/chartContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvDateRange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jam Tidur Tracking"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chartSleep"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah Makan Tracking"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chartEat"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah Minum Tracking"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chartDrink"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jarak Jalan Tracking"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chartWalk"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
